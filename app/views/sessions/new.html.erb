
<h1>Connexion</h1>

<% if flash[:error] %>
  <p><%= flash[:error] %></p>
<% end %>

<%= form_tag sessions_path do %>
  <div>
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>

  <div>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>

  <%= submit_tag "Se connecter" %>
<% end %>
<%= link_to "Creer un compte", new_user_path, class:"nav-link btn1" %>

</html>
